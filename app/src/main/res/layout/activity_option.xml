<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raghav.bustrackingapp2.Option">

    <RelativeLayout
        android:layout_width="379dp"
        android:layout_height="512dp"
        android:background="@android:color/black"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="-3dp">

        <TableLayout
            android:id="@+id/tableLayout3"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_above="@+id/btnInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="37dp"
            android:background="@android:color/holo_blue_bright"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="47dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_above="@+id/tableLayout4"
            android:layout_alignStart="@+id/tableLayout3"
            android:layout_marginBottom="28dp"
            android:background="@android:color/holo_blue_bright"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="257dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayout4"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginBottom="35dp"
            android:background="@android:color/holo_blue_bright"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="257dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tableLayout">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

        <Button
            android:id="@+id/btnLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tableLayout3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:onClick="onLocationClick"
            android:text="Location" />

        <Button
            android:id="@+id/btnInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tableLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:onClick="onInformationClick"
            android:text="Information" />

        <Button
            android:id="@+id/btnSeatBooking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onseatBookingClick"
            android:text="Seat Booking"
            android:layout_marginTop="18dp"
            android:layout_alignTop="@+id/tableLayout4"
            android:layout_alignStart="@+id/btnInfo" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
