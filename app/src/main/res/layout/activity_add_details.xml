<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.raghav.bustrackingapp2.AddDetails">

    <RelativeLayout
        android:layout_width="377dp"
        android:layout_height="514dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="-2dp">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:text="ADD DETAILS"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView14"
            android:layout_marginStart="11dp"
            android:layout_marginTop="63dp"
            android:text="Bus No.:"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/tfAddBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView16"
            android:layout_marginEnd="19dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView16"
            android:layout_below="@+id/tfAddBus"
            android:layout_marginTop="21dp"
            android:text="Driver Name:"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/tfAddDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_alignBaseline="@+id/textView18"
            android:layout_alignBottom="@+id/textView18"
            android:layout_toEndOf="@+id/textView18" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Route No.:"
            android:textSize="30sp"
            android:layout_below="@+id/tfAddDriver"
            android:layout_alignStart="@+id/textView18" />

        <EditText
            android:id="@+id/tfAddRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView19"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DL No.:"
            android:textSize="30sp"
            android:layout_below="@+id/tfAddRoute"
            android:layout_alignStart="@+id/textView19"
            android:layout_marginTop="14dp" />

        <EditText
            android:id="@+id/tfAddDL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView14"
            android:layout_alignTop="@+id/textView20"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnAddInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:layout_marginTop="35dp"
            android:onClick="AddInfo"
            android:layout_below="@+id/tfAddDL"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
